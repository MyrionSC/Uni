package main;

public class Main {

	
	public static void runTests () {
		// test starting variables are set right
		CarAlarmSystem cas = new CarAlarmSystem();
		cas.printState();
		cas.openDoor();
		new java.util.Timer().schedule( 
		        new java.util.TimerTask() {
		            @Override
		            public void run() {
		                cas.printState();
		            }
		        }, 
		        2500 
		);
	}
	
	public static void main(String[] args) {
		
		runTests();
	}
}
